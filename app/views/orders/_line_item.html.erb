<% product = line_item.product %>
<% line_item_total = product.price * line_item.quantity %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= line_item_total %>
    </td>
  </tr>
