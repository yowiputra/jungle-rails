<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">

      <div class="col-sm-4">
        <h4>Comments</h4>
        <%= form_for([@product, @product.reviews.new]) do |f| %>
          <p>
            <%= f.label :description %><br>
            <%= f.text_area :description, size:"30x5"%>
          </p>
          <p>
            <%= f.label :rating %><br>
            <%= f.select :rating, [ 0, 1, 2, 3, 4, 5], :prompt => 'Select One' %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% @product.reviews.each do |review| %>
            <dt>User ID</dt>
            <dd><%= review.user_id %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            </br/>
          <% end %>
        </dl>
      </div>

    </div>

  </article>

</section>
