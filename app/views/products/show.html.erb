<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="col-sm-4">
        <% if current_user %>
          <%= form_for([@product, @review]) do |f| %>

            <% if f.object.errors.any? %>
              <div class="alert alert-danger">
                <strong>The following errors prevented saving:</strong>
                <ul>
                  <% f.object.errors.full_messages.each do |error| %>
                    <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <p>
              <%= f.label :description %><br>
              <%= f.text_area :description, style: 'width: 100%', :rows => 8 %>
            </p>
            <p>
              <%= f.label :rating %><br>
              <%= f.select :rating, [ 0, 1, 2, 3, 4, 5], :prompt => 'Select One' %>
            </p>
            <p>
              <%= f.submit 'Post Review', class: 'btn btn-primary btn-sm' %>
            </p>

          <% end %>
        <% end %>

      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <% @product.reviews.reverse_each do |review| %>
            <dt>Name</dt>
            <dd><%= review.user.name %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            <% if current_user === review.user %>
                <dt></dt>
                <dd>
                  <%= link_to 'Delete Review', review_path(review.id), method: :delete, data:{confirm: 'Are you sure?'}%>
                </dd>
            <% end %>
            </br/>
          <% end %>
        </dl>
      </div>

    </div>

  </article>

</section>
